* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
    overflow-x: hidden;
    font-family: sans-serif;
    font-weight: bold;
    color: white;
    padding: $gutter;
}

header {
    text-align: center;
    margin: $gutter 0 ($gutter * 2);
}

figure {
    height: 100px;
    line-height: 100px;
    text-align: center;
    margin-top: ($gutter / 2);
    margin-bottom: ($gutter / 2);
    
    figure {
        margin-top: 0;
        margin-bottom: 0;
    }
}

section {
    margin-top: $gutter;
    margin-bottom: $gutter;
    
    &:last-of-type {
        margin-bottom: 0;
    }
    
    // Responsive Blocks
    &:nth-of-type(1) {
        background: #42CAFD;
        
        figure {
            column(1);
            background: darken(#42CAFD, 10%);
            
            +above(500px) {
                column(1/2);
            }
            
            +above(800px) {
                column(1/3);
            }
            
            +above(1100px) {
                column(1/4);
            }
        }
    }
    // Offset
    &:nth-of-type(2) {
        background: #66B3BA;
        
        figure {
            column(1/3);
            background: darken(#66B3BA, 10%);
            
            &:first-child {
                offset(1/3);
            }
        }
    }
    // Nesting
    &:nth-of-type(3) {
        background: #8EB19D;
        
        figure {
            column(1/3);
            background: darken(#8EB19D, 10%);
            
            .row {
                row(1/2 1/3); // you only need to set this is old == true
            }
            
            figure {
                column(1/2 1/3); // you only need to set the parent context (the second ratio) this is old == true
                background: darken(#8EB19D, 20%);
            }
        }
    }
    // Source Ordering
    &:nth-of-type(4) {
        background: #F6EFA6;
        
        figure {
            column(1/2);
            background: darken(#F6EFA6, 10%);
            
           +above(800px) {
                &:first-child {
                    move(1/2);
                }
                &:last-child {
                    move(-1/2);
                }
            }
        }
    }
    // Alignment
    &:nth-of-type(5) {
        background: #F0D2D1;
        align;
        height: 300px;
        
        figure {
            column(1/3);
            background: darken(#F0D2D1, 10%);
            margin-bottom: 0;
        }
    }
    // Cycle
    &:nth-of-type(6) {
        background: #F19A3E;
        
        figure {
            column(1);
            height: auto;
            line-height: 25px;
            font-weight: normal;
            padding: ($gutter / 2);
            background: darken(#F19A3E, 10%);
            
            +above(500px) {
                column(1/2);
                cycle(2);
            }
            
            +above(800px) {
                column(1/3);
                cycle(3);
            }
            
            +above(1100px) {
                column(1/4);
                cycle(4);
            }
            
        }
    }
}